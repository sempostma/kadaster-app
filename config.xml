<?xml version='1.0' encoding='utf-8'?>
<widget id="com.EchoSierraStudio.Ov_Fiets_App" version="1.1.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>OV Fiets App</name>
    <description>
        Met de OV Fiets App kunt u gemakkelijk informatie opzoeken over OV Fiets huurlocaties. 
    </description>
    <author email="polyismstudio@gmail.com" href="https://esstudio.site/">
        Sem Postma
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="orientation" value="portrait" />
</widget>
